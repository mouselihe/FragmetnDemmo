<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_title_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:background="@drawable/main_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/il_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="首页"
            />
        <ImageView
            android:id="@+id/il_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/il_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/main_tab_bg"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/iv_HomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_home"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_channel"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/iv_channel" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_search"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/iv_search" />

        <ImageView
            android:id="@+id/iv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_my"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/ic_middle_bg"
        android:layout_below="@id/rl_title"
        android:layout_above="@+id/il_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp">
    </RelativeLayout>
</RelativeLayout>